WindowManager:
	MainWindow:
	SecondWindow:

<MainWindow>:
	name: 'main'

	GridLayout:
		cols: 1

		GridLayout:
			cols: 1
			size_hint: 2, 2
			Label:
				text: 'Level 1'
			Label:
				text: 'Level 2'
			Label:
				text: 'Level 3'
				color: 1,0,0,1
			Label:
				text: 'Level 4'
			Label:
				text: 'Level 5'
			Label:
				text: 'Level 6'
			Label:
				text: 'Level 7'
		GridLayout:
			cols: 2
			GridLayout:
				rows:2
				Label:
					text: 'black is empty'
				Label:
					text: 'red is full'
					color: 1,0,0,1
			Button:
				text: 'List View--->'
				on_release: 
					app.root.current = 'second'
					root.manager.transition.direction='left'

<SecondWindow>:
	name: 'second'

	Button:
		text: '<---Floor View'
		on_release: 
			app.root.current = 'main'
			root.manager.transition.direction='right'