WindowManager:
	MainWindow:
	SecondWindow:

<MainWindow>:
	name: 'main'
	btn_1: btn_1
	GridLayout:
		cols: 1

		GridLayout:
			cols: 1
			size_hint: 3, 3 
			Button:
				id: btn_1
				text: 'LvL   1'
				on_release: root.btn()
				font_size: 35
			Button:
				text: 'LvL   2'
				on_release: root.update()
				font_size: 35
			Button:
				text: 'LvL   3'
				on_release: root.btn()
				font_size: 35
			Button:
				text: 'LvL   4'
				on_release: root.btn()
				font_size: 35
			Button:
				text: 'LvL   5'
				on_release: root.btn()
				font_size: 35
			Button:
				text: 'LvL   6'
				on_release: root.btn()
				font_size: 35
			Button:
				text: 'LvL   7'
				on_release: root.btn()
				font_size: 35
		GridLayout:
			cols: 2
			GridLayout:
				rows:2
				Label:
					text: 'black is empty'
				Label:
					text: 'red is full'
					color: 1,0,0,1
			Button:
				text: 'List View--->'
				on_release: 
					app.root.current = 'second'
					root.manager.transition.direction='left'
<P>:
	Label:
		text: 'You pressed the button'
		size_hint: 0.6, 0.2
		pos_hint: {'x':0.2, 'top':1}

	Button:
		text: 'you pressed the button'
		size_hint: 0.8, 0.2
		pos_hint: {'x':0.1, 'y':0.1}

<SecondWindow>:
	name: 'second'

	Button:
		text: '<---Floor View'
		on_release: 
			app.root.current = 'main'
			root.manager.transition.direction='right'