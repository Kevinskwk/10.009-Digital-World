WindowManager:
	MainWindow:
	SecondWindow:

<MainWindow>:
	name: 'main'

	GridLayout:
		cols: 1

		GridLayout:
			cols: 1
			size_hint: 2, 2
			Button:
				text: 'Press me'
				on_release: root.btn()
			Label:
				text: 'Level 1'
		GridLayout:
			cols: 2
			GridLayout:
				rows:2
				Label:
					text: 'black is empty'
				Label:
					text: 'red is full'
					color: 1,0,0,1
			Button:
				text: 'List View--->'
				on_release: 
					app.root.current = 'second'
					root.manager.transition.direction='left'
<P>:
	Label:
		text: 'You pressed the button'
		size_hint: 0.6, 0.2
		pos_hint: {'x':0.2, 'top':1}

	Button:
		text: 'you pressed the button'
		size_hint: 0.8, 0.2
		pos_hint: {'x':0.1, 'y':0.1}
<SecondWindow>:
	name: 'second'

	Button:
		text: '<---Floor View'
		on_release: 
			app.root.current = 'main'
			root.manager.transition.direction='right'